<Window x:Class="DSP.Sine_enter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DSP"
        mc:Ignorable="d"
        Title="Sine_enter" Height="350" Width="350">
    <Grid>
        <Grid.RowDefinitions>

        </Grid.RowDefinitions>
        <Grid>
            <TextBlock>Количество отсчётов</TextBlock>
            <TextBox Name="counts" Text="1000" Margin="0,21,0,0"></TextBox>
            <TextBlock Margin="0,50,0,0">Амплитуда</TextBlock>
            <TextBox Name="amplitude" Text="1" Margin="0,69,0,0"></TextBox>
            <TextBlock Margin="0,104,0,0">Начальная фаза</TextBlock>
            <TextBox Name="phase" Text="3,14" Margin="0,132,0,86"></TextBox>
            <TextBlock Margin="0,178,0,0">Круговая частота</TextBlock>
            <TextBox Name="round_freq" Text="0,035" Margin="0,203,0,33"></TextBox>
        </Grid>
        <Grid>
            <Button Content="Смоделировать сигнал" Margin="0,253,0,0" Click="sine_modultaion"/>
        </Grid>
    </Grid>
</Window>
